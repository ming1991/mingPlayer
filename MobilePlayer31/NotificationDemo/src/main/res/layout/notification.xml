<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_titlebar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notification_music_playing" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#8affffff" />
    </LinearLayout>

    <ImageView
        android:id="@+id/notification_pre"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_notification_pre" />

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_notification_next" />
</LinearLayout>